{
  "name": "IsoMaestro",
  "version": "0.1.0",
  "label": "Pointer-RAG Multi-Agent Orchestrator (MCP)",
  "description": "Planner→One-shot Translator→Sandboxed Executor→Reflector with pointer-first RAG",
  "mcpVersion": "1.0",
  "server": {
    "entry": "dist/server.js",
    "transport": { "type": "stdio" }
  },
  "tools": [
    { "name": "plan_task", "inputSchema": "schemas/planTaskInput.json", "outputSchema": "schemas/taskContract.json" },
    { "name": "retrieve_evidence", "inputSchema": "schemas/retrieveInput.json", "outputSchema": "schemas/evidenceCardList.json" },
    { "name": "compile_capsule", "inputSchema": "schemas/taskContract.json", "outputSchema": "schemas/executionCapsule.json" },
    { "name": "run_capsule", "inputSchema": "schemas/runCapsuleInput.json", "outputSchema": "schemas/runResult.json" },
    { "name": "reflect_pipeline", "inputSchema": "schemas/reflectInput.json", "outputSchema": "schemas/reflectionReport.json" },
    { "name": "render_with_pointers", "inputSchema": "schemas/renderInput.json", "outputSchema": "schemas/renderOutput.json" }
  ],
  "resources": [
    { "uri": "evidence://", "description": "Evidence cards and passages (read only)" },
    { "uri": "artifact://", "description": "Artifacts generated by runs" },
    { "uri": "log://", "description": "Structured execution logs" }
  ],
  "prompts": [
    { "name": "planner_system" },
    { "name": "translator_system" },
    { "name": "reflector_criteria" }
  ]
}
